<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.reut_hack.feelin.MainActivity">

    <RelativeLayout
        android:id="@+id/full_body_image"
        android:layout_width="match_parent"
        android:layout_height="460dp"
        android:orientation="vertical"
        android:background="@drawable/body_idle"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="197dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <ImageView
                android:id="@+id/sholdrleft"
                android:layout_width="180dp"
                android:layout_height="201dp"
                android:layout_weight="1"
                app:srcCompat="@android:color/transparent" />

            <ImageView
                android:id="@+id/focus"
                android:layout_width="180dp"
                android:layout_height="201dp"
                app:srcCompat="@android:color/transparent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:orientation="horizontal"
            android:weightSum="1"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp"
            android:layout_weight="0.94">

            <ImageView
                android:id="@+id/armleft"
                android:layout_width="96dp"
                android:layout_height="match_parent"
                android:layout_weight="0.31"
                app:srcCompat="@android:color/transparent" />

            <ImageView
                android:id="@+id/stomach"
                android:layout_width="67dp"
                android:layout_height="match_parent"
                android:layout_weight="0.69"
                app:srcCompat="@android:color/transparent" />

            <ImageView
                android:id="@+id/armrghit"
                android:layout_width="118dp"
                android:layout_height="match_parent"
                app:srcCompat="@android:color/transparent" />

        </LinearLayout>

        <ImageView
            android:id="@+id/hips"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            app:srcCompat="@android:color/transparent" />

        <ImageView
            android:id="@+id/legs"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:srcCompat="@android:color/transparent" />

    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_text_main_act"
        android:id="@+id/btn_main_activity"
        android:visibility="invisible"
        style="@style/bottom_button_style"
        android:layout_alignParentBottom="true"
        android:supportsRtl="true"
        android:onClick="goToPainSenseActivity"/>

    <Button
        android:id="@+id/btn_swap"
        android:layout_width="73dp"
        android:layout_height="57dp"

        android:background="@drawable/flip"
        android:layout_above="@+id/btn_main_activity"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/txtNoPains"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="לא כואב בכלל >"
        android:textSize="24sp" />


</RelativeLayout>
